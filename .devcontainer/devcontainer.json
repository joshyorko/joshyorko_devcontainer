// .devcontainer/devcontainer.json
{
    "name": "Universal Dev Container",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
    "postCreateCommand": "curl https://install.duckdb.org | sh && mv duckdb /usr/local/bin/;curl -LsSf https://astral.sh/uv/install.sh | sh;conda config --append channels defaults; cowsay  -c ghostbusters -t 'This development environment Kicks Ass!'",
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "zsh"
            },
            "extensions": [
                "ms-python.python",
                "ms-azuretools.vscode-docker"
            ]
        }
    }
}
